# --- Dreamfire minimal Doxygen config ---

# Output
PROJECT_NAME        = Dreamfire Docs
OUTPUT_DIRECTORY    = docs/_doxygen
GENERATE_HTML       = YES
GENERATE_LATEX      = NO
HTML_EXTRA_STYLESHEET = docs/theme/dreamfire.css
HTML_HEADER           = docs/theme/header.html
HTML_FOOTER           = docs/theme/footer.html

# What to parse
INPUT               = .
RECURSIVE           = YES
FILE_PATTERNS       = *.cs *.java *.js *.jsx *.ts *.tsx *.md
EXCLUDE_PATTERNS    = \
  */node_modules/* \
  */dist/* */build/* */out/* \
  */bin/* */obj/* \
  */Library/* */Temp/* */Logs/* \
  .git/* .github/* \
  docs/_doxygen/*

# Parsing hints (keeps C#/Java-style docs readable)
MARKDOWN_SUPPORT    = YES
JAVADOC_AUTOBRIEF   = YES
OPTIMIZE_OUTPUT_JAVA= YES

# Simple navigation
GENERATE_TREEVIEW   = YES